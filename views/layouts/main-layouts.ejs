<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Archivo+Black&family=Barlow:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.cdnfonts.com/css/helvetica-neue-55" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="css/themes.css" rel="stylesheet">

    <title><%= title %></title>
</head>

<body>
    <main>
        <div class="d-flex flex-column flex-shrink-0 pt-3 ps-3 text-white bg-sidebar" style="width: 294px;">
            <a href="/" class="text-center mb-5">
                <img src="img/logo.png" class="img-logo img-fluid">
            </a>
            <ul class="nav nav-pills flex-column mb-auto">
              <li class="nav-item">
                <a href="/" class="nav-link <% if (actived == 'timeline') { %>active<% } %> btn-nav" aria-current="page">
                    <i class="bi bi-alarm px-2"></i>
                    TIMELINE
                </a>
              </li>
              <li>
                <a href="/report" class="nav-link <% if (actived == 'report') { %>active<% } %>">
                    <i class="bi bi-clipboard-data px-2"></i>
                    REPORT
                </a>
              </li>
              <li>
                <a href="/pantau" class="nav-link <% if (actived == 'pantau') { %>active<% } %>">
                    <i class="bi bi-bullseye px-2"></i>
                    PANTAU
                </a>
              </li>
              <li>
                <a href="/radio" class="nav-link <% if (actived == 'radio') { %>active<% } %>">
                    <i class="bi bi-broadcast-pin px-2"></i>
                    RADIO
                </a>
              </li>
              <li>
                <a href="/map" class="nav-link <% if (actived == 'map') { %>active<% } %>">
                    <i class="bi bi-pin-map px-2"></i>
                    MAP
                </a>
              </li>
              <li>
                <a href="/dataset" class="nav-link <% if (actived == 'dataset') { %>active<% } %>">
                    <i class="bi bi-database px-2"></i>
                    DATASET
                </a>
              </li>
              <li>
                <a href="/admin" class="nav-link <% if (actived == 'admin') { %>active<% } %>">
                    <i class="bi bi-person-bounding-box px-2"></i>
                    ADMIN
                </a>
              </li>
            </ul>
            <hr>
            <a href="#" class="d-flex align-items-center text-white text-decoration-none p-3">
                <i class="bi bi-box-arrow-right px-2"></i> 
                KELUAR
            </a>
          </div>
    
        <div class="container-fluid">
            <%- body %>
        </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>

</html>